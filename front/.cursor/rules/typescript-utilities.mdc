  currency?: string;
  locale?: string;
  decimals?: number;
}

export function formatCurrency(
  amount: number,
  options: FormatOptions = {}
): string {
  const { currency = 'USD', locale = 'en-US', decimals = 2 } = options;
  return new Intl.NumberFormat(locale, {
    style: 'currency',
    currency,
    minimumFractionDigits: decimals,
    maximumFractionDigits: decimals,
  }).format(amount);
}
